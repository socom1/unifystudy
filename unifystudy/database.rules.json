{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "invitations": {
          ".write": "auth != null"
        },
        "notifications": {
          ".write": "auth != null"
        }
      }
    },
    "public_leaderboard": {
      ".read": "auth != null",
      "$user_id": {
         ".write": "auth != null && $user_id === auth.uid",
         ".validate": "newData.hasChildren(['username', 'xp']) && newData.child('username').isString() && newData.child('xp').isNumber()"
      },
      ".indexOn": ["username", "email", "xp"]
    },
    "global_chat": {
      ".read": "auth != null",
      "$msg_id": {
          ".write": "auth != null && (!data.exists() || data.child('userId').val() === auth.uid)",
          ".validate": "newData.hasChildren(['text', 'userId', 'timestamp']) && newData.child('text').val().length < 500"
      },
      ".indexOn": ["timestamp"]
    },
    "global_chat_typing": {
      ".read": "auth != null",
      "$user_id": {
        ".write": "auth != null && $user_id === auth.uid"
      }
    },
    "channels": {
      "$channel_id": {
        ".read": "root.child('projects').child($channel_id).child('members').child(auth.uid).exists()",
        ".write": "root.child('projects').child($channel_id).child('members').child(auth.uid).exists()",
        ".indexOn": ["timestamp"],
        "messages": {
           ".indexOn": ["timestamp"]
        }
      }
    },
    "achievements": {
      ".read": "auth != null",
      ".write": false
    },
    "projects": {
      "$project_id": {
        ".read": "data.child('members').child(auth.uid).exists()",
        ".write": "data.child('members').child(auth.uid).exists() || !data.exists()",
        ".indexOn": ["members"]
      }
    }
  }
}
