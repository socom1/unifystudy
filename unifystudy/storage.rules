rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User content: Only accessible by the user themselves
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Default deny for everything else (or keep loose if needed for legacy, but goal is security)
    // If there are other paths like 'public', we need to define them. 
    // For now, blocking root writes.
  }
}
