{
  "name": "unifystudy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && electron-builder --win"
  },
  "build": {
    "appId": "com.unifystudy.app",
    "productName": "UnifyStudy",
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "installers"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rejuszuzevicius",
        "repo": "unifystudy"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "firebase": "^12.5.0",
    "framer-motion": "^12.23.24",
    "git": "^0.1.5",
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.9.6",
    "reactflow": "^11.11.4",
    "recharts": "^3.5.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "sass": "^1.94.2",
    "vite": "^5.4.1"
  }
}
