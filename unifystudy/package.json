{
  "name": "unifystudy",
  "private": true,
  "version": "1.0.2",
  "author": {
    "name": "Rejus Zuzevicius",
    "email": "rejus.zuzevicius@example.com"
  },
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "type-check": "tsc",
    "test": "vitest",
    "build": "vite build",
    "lint": "eslint .",
    "format": "prettier --write .",
    "preview": "vite preview",
    "electron": "electron .",
    "build:mac": "vite build && electron-builder --mac",
    "build:win": "vite build && set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --win"
  },
  "build": {
    "appId": "com.unifystudy.app",
    "productName": "UnifyStudy",
    "protocols": [
      {
        "name": "UnifyStudy Auth",
        "schemes": [
          "unifystudy"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": "dmg",
      "icon": "public/app-icon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "favicon/favicon.ico",
      "forceCodeSigning": false
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "installers"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rejuszuzevicius",
        "repo": "unifystudy"
      }
    ]
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@sentry/react": "^10.31.0",
    "@sentry/vite-plugin": "^4.6.1",
    "@tiptap/extension-collaboration": "^3.17.1",
    "@tiptap/extension-collaboration-cursor": "^2.26.2",
    "@tiptap/extension-text-style": "^3.17.1",
    "@tiptap/pm": "^3.17.1",
    "@tiptap/react": "^3.17.1",
    "@tiptap/starter-kit": "^3.17.1",
    "@tiptap/y-tiptap": "^3.0.2",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "firebase": "^12.5.0",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.554.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^6.0.0",
    "react-hook-form": "^7.68.0",
    "react-is": "^19.2.4",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "^7.9.6",
    "react-virtuoso": "^4.18.1",
    "reactflow": "^11.11.4",
    "recharts": "^3.5.1",
    "sonner": "^2.0.7",
    "uuid": "^9.0.1",
    "y-indexeddb": "^9.0.12",
    "y-prosemirror": "^1.3.7",
    "y-webrtc": "^10.3.0",
    "yjs": "^13.6.29",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.3.0",
    "prettier": "^3.7.4",
    "sass": "^1.94.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.16"
  }
}
